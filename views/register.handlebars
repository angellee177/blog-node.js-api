<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="registerForm">
                <div class="row" style="padding-top: 30px">
                    <label for="name" class="control-label col-md-2">Full Name</label>
                    <input type="text" id="name" placeholder="input your name here" 
                    class="form-control" value="">
                </div>
                <div class="row" style="padding-top: 20px">
                    <label for="email" class="control-label col-md-2">Email</label>
                    <input type="email" id="email" placeholder="input your email here" 
                    class="form-control" value="">
                </div>
                <div class="row" style="padding-top: 20px">
                    <label for="password" class="control-label col-md-2">Password</label>
                    <input type="password" id="password" placeholder="type your password here"
                    class="form-control" value="">
                </div>
                <div class="row" style="padding-top: 20px">
                    <button type="button" id="registerButton" class="btn btn-primary">Register</button>
                </div>
            </form>
            <hr/>
            <a href="/login">Back to Login Page</a>
        </div>
    </div>
</div>